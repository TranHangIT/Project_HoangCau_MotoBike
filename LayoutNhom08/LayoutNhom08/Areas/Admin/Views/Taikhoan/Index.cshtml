@model IEnumerable<LayoutNhom08.Models.TaiKhoan>

@{
    ViewBag.Title = " Danh sách tài khoản";
    ViewBag.Link = "Quản lý tài khoản";
    ViewBag.Name = "Taikhoan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section CSSPartial{
    <link href="~/Areas/Admin/Assets/css/table.css" rel="stylesheet">
}
<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr class="text-center">
                    <th>Mã</th>
                    <th> Họ và tên</th>
                    <th>Tên đăng nhập</th>
                    <th>Số điện thoại </th>
                    <th>Trạng thái</th>
                    <th>Quyền</th>

                    <th colspan="2">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr class="text-center">
                    <th> @Html.DisplayFor(modelItem => item.MaTK)</th>
                    <td> @Html.DisplayFor(modelItem => item.HoTen)</td>
                    <td>@Html.DisplayFor(modelItem => item.TenDN)</td>
                    <td>@Html.DisplayFor(modelItem => item.SoDienThoai)</td>

                    @{
                        string trangThai = "";
                        if (item.TrangThai == true) { trangThai = "Hoạt động"; }
                        else { trangThai = "Khóa"; }

                        string quyen = "";
                        if (item.Quyen == true) { quyen = "Quản trị"; }
                        else { quyen = "Khách hàng"; }

                    }
                    <td>@trangThai</td>
                    <td>@quyen</td>

                    <td title="Sửa tài khoản" class="edit"><a href="@Url.Action("Index","Taikhoan",new {id = item.MaTK})"><i class="bi bi-pencil-fill"></i></a></td>
                    <td title="Xóa tài khoản" class="remove"><a href="@Url.Action("Index","Taikhoan",new {id = item.MaTK})"><i class="bi bi-trash-fill"></i></a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>







