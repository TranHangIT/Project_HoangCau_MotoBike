

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="breadcrumb-wrapper" class="breadcrumb-w-img" style="background-image: url(/wwwroot/img/products/bg1.jpg); ">

    <div class="breadcrumb-overlay"></div>
    <div class="breadcrumb-content">
        <div class="wrapper">
            <div style="text-align: center;">
                <div class="breadcrumb-big">
                    <h2>
                        TÀI KHOẢN
                    </h2>

                </div>
                <div class="breadcrumb-small">
                    <a href="@Url.Action("Index","Home")" title="">TRANG CHỦ</a>


                    <span aria-hidden="true">/</span>
                    <span>TẠO TÀI KHOẢN</span>


                </div>
            </div>
        </div>
    </div>
</section>
<div class="grocino-form">

    <div class="container">

        <div class="row">

            <div class="col-lg-6 col-md-8 col-sm-10 col-12 mx-auto">


                <form method="post" class="form-signin">

                    <div class="ui form">
                        <div class="ui left icon input w-100 ">
                            <h1 style="text-align: center;color:blue;width: 100%;border:rgb(94, 92, 92) solid 2px;border-radius: 4px;height:70px;padding-top: 18px;">TẠO TÀI KHOẢN</h1>

                        </div>
                        <div class="ui left icon input w-100 field ">

                            <input type="text" placeholder="Tên đăng nhập" required />


                        </div>
                        <div class="ui left icon input w-100 field">

                            <input type="text" placeholder="Họ tên" required />


                        </div>
                        <div class="ui left icon input w-100 field">

                            <input type="text" placeholder="Số điện thoại" required />

                        </div>
                        <div class="ui left icon input w-100 field">

                            <input type="Email" placeholder="Email" required />

                        </div>
                        <div class="ui left icon input w-100 field">

                            <input type="password" placeholder="Mật khẩu" required />

                            <i class="uil uil-unlock icon"></i>

                        </div>

                    </div>

                    <button class="btn btn-orange btn-block" type="submit">ĐĂNG KÝ</button>
                    <div class="form-signin__link">
                        <a href="@Url.Action("Index","Home")">
                            <p style="font-size: 20px;color:red">Trở về</p>
                        </a>
                    </div>


                </form>

            </div>

        </div>

    </div>

</div>